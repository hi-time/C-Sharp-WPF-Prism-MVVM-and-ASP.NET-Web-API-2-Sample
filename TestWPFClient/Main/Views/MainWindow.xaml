<Window x:Class="Main.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:Main"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="Test WPF Client ( Prism Wpf )" 
        Height="600" Width="800" WindowStartupLocation="CenterScreen" VerticalAlignment="Top">
        <!-- WindowState="Maximized" -->
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
        <DockPanel LastChildFill="True">
            <ContentControl prism:RegionManager.RegionName="MenuRegion" DockPanel.Dock="Top" />
            <ContentControl prism:RegionManager.RegionName="ContentRegion" DockPanel.Dock="Top" />
        </DockPanel>
    </ScrollViewer>
</Window>